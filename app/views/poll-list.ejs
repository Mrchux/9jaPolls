<%- include layout/header %>
<div class="container">
  <div class="row">
    <h2>My Polls <small><a style="font-size:0.8em" href="/dashboard">[Dashboard]</a> <a style="font-size:0.8em" href="/create-poll">[Create Poll]</a></small></h2>
    <hr />

    <% polls.forEach((poll) => { %>
      <a href="/view-poll/<%= poll._id %>">
      <div class="card col-xs-3" style="padding: 10px; height: 150px">
        <div class="card-body">
          <%= poll.question %>
        </div>
      </div>
    </a>
    <% }) %>

  </div>
</div>
<%- include layout/footer %>
